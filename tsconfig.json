{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6", "es2017"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "removeComments": true,
    "declaration": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],

    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ]
}